// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Song {
  id         String    @id @default(cuid())
  title      String
  artist     String
  innerColor String
  outerColor String
  bpm        Float     @default(120)
  complete   Boolean   @default(false)
  download   Download?
  ticket     Ticket?
  metadata   Metadata?
  approved   Boolean   @default(false)
  automatic  Boolean   @default(true)
  youtubeUrl String
  downloads  Int       @default(0)
  createdAt  DateTime  @default(now())

  @@fulltext([title, artist])
  @@fulltext([title])
  @@fulltext([artist])
}

model Metadata {
  id          String  @id @default(cuid())
  song        Song    @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId      String
  spotTrackId String
  spotAlbumId String
  albumTitle  String
  albumArt    String
  artist      String
  artistId    String
  previewUrl  String?
  trackNum    Int
}

model Ticket {
  id        String   @id @default(cuid())
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId    String
  slug      String   @unique
  createdAt DateTime @default(now())
  complete  Boolean  @default(false)
  pending   Boolean  @default(false)
}

model Download {
  id      String @id @default(cuid())
  song    Song   @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId  String
  kanoKey String
  drums   String
  bass    String
  vocals  String
  other   String
}

model Spotify {
  id      String   @id @default(cuid())
  token   String
  expires DateTime
}
